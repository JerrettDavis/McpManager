@page "/servers/{ServerId}"
@using McpManager.Core.Interfaces
@using McpManager.Core.Models
@using McpManager.Web.Components.Shared
@inject IServerManager ServerManager
@inject IInstallationManager InstallationManager
@inject IAgentManager AgentManager
@inject IConfigurationService ConfigurationService
@inject NavigationManager Navigation

<PageTitle>Server Configuration - @serverName</PageTitle>

<div class="container-fluid">
    @if (server == null)
    {
        <div class="alert alert-danger">
            <h4>Server Not Found</h4>
            <p>The requested server could not be found.</p>
            <a href="/servers/installed" class="btn btn-primary">Back to Servers</a>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/servers/installed">Servers</a></li>
                        <li class="breadcrumb-item active">@server.Name</li>
                    </ol>
                </nav>
                <h1>‚öôÔ∏è @server.Name Configuration</h1>
                <p class="lead">Manage global configuration for this MCP server</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Global Configuration</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">
                            This configuration will be used as the default for all agents using this server.
                            Agents with matching configurations will be automatically updated when you change this.
                        </p>

                        <ConfigurationEditor Configuration="@serverConfiguration"
                                           ConfigurationChanged="@OnConfigurationChanged"
                                           ReadOnly="false" />

                        @if (configurationChanged)
                        {
                            <div class="mt-3">
                                <button class="btn btn-success me-2" @onclick="SaveConfigurationAsync">
                                    üíæ Save Configuration
                                </button>
                                <button class="btn btn-secondary" @onclick="CancelConfiguration">
                                    ‚úñÔ∏è Cancel
                                </button>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(saveMessage))
                        {
                            <div class="alert @(saveSuccess ? "alert-success" : "alert-danger") mt-3">
                                @saveMessage
                            </div>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Manage Agents</h5>
                        @if (agentSelectionChanged)
                        {
                            <div>
                                <button class="btn btn-sm btn-success me-2" @onclick="ApplyAgentChangesAsync" disabled="@isProcessing">
                                    üíæ Apply Changes
                                </button>
                                <button class="btn btn-sm btn-secondary" @onclick="CancelAgentChanges" disabled="@isProcessing">
                                    ‚úñÔ∏è Cancel
                                </button>
                            </div>
                        }
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(agentMessage))
                        {
                            <div class="alert alert-@agentMessageType alert-dismissible fade show">
                                @agentMessage
                                <button type="button" class="btn-close" @onclick="() => agentMessage = null"></button>
                            </div>
                        }

                        <div class="mb-3">
                            <p class="text-muted mb-2">
                                Select which agents should have this server configured. Changes are applied to all selected agents at once.
                            </p>
                            <div class="btn-toolbar gap-2">
                                <button class="btn btn-sm btn-outline-primary" @onclick="SelectAllAgents" disabled="@isProcessing">
                                    ‚òë Select All
                                </button>
                                <button class="btn btn-sm btn-outline-secondary" @onclick="DeselectAllAgents" disabled="@isProcessing">
                                    ‚òê Deselect All
                                </button>
                            </div>
                        </div>

                        @if (!agents.Any())
                        {
                            <p class="text-muted mb-0">
                                No agents detected.
                            </p>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th style="width: 40px;">
                                                <input type="checkbox" class="form-check-input"
                                                       @onchange="ToggleAllAgents"
                                                       checked="@allAgentsSelected"
                                                       disabled="@isProcessing" />
                                            </th>
                                            <th>Agent</th>
                                            <th>Current Status</th>
                                            <th>New Status</th>
                                            <th>Configuration</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var agent in agents)
                                        {
                                            var installation = installations.FirstOrDefault(i => i.AgentId == agent.Id);
                                            var currentStatus = GetAgentStatus(agent.Id);
                                            var isSelected = selectedAgents.GetValueOrDefault(agent.Id, false);
                                            var newStatus = isSelected ? "Enabled" : "Not Added";
                                            var statusChanged = GetStatusChanged(agent.Id);
                                            var isMatching = installation != null && ConfigurationService.DoesAgentConfigMatchGlobal(server, installation);
                                            var currentAgentId = agent.Id; // Capture for lambda

                                            <tr class="@(statusChanged ? "table-warning" : "")">
                                                <td>
                                                    <input type="checkbox" class="form-check-input"
                                                           checked="@isSelected"
                                                           @onchange="@(e => ToggleAgentSelection(currentAgentId, e))"
                                                           disabled="@isProcessing" />
                                                </td>
                                                <td>
                                                    <strong>@agent.Name</strong>
                                                    <div class="small text-muted">@agent.Type</div>
                                                </td>
                                                <td>
                                                    @if (installation == null)
                                                    {
                                                        <span class="badge bg-secondary">Not Added</span>
                                                    }
                                                    else if (installation.IsEnabled)
                                                    {
                                                        <span class="badge bg-success">‚úì Enabled</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">‚è∏ Disabled</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (statusChanged)
                                                    {
                                                        if (isSelected)
                                                        {
                                                            <span class="badge bg-success">‚Üí Enabled</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">‚Üí Not Added</span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No change</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (installation != null)
                                                    {
                                                        <ConfigurationStatusBadge IsMatching="@isMatching" />
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">‚Äî</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (installation != null)
                                                    {
                                                        <a href="/agents/@agent.Id/servers/@Uri.EscapeDataString(server.Id)"
                                                           class="btn btn-sm btn-outline-primary">
                                                            ‚öôÔ∏è Configure
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">‚Äî</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">Server Details</h5>
                    </div>
                    <div class="card-body">
                        <dl class="mb-0">
                            <dt>Version</dt>
                            <dd>@server.Version</dd>

                            <dt>Author</dt>
                            <dd>@server.Author</dd>

                            <dt>Description</dt>
                            <dd>@server.Description</dd>

                            @if (server.Tags.Any())
                            {
                                <dt>Tags</dt>
                                <dd>
                                    @foreach (var tag in server.Tags)
                                    {
                                        <span class="badge bg-secondary me-1">@tag</span>
                                    }
                                </dd>
                            }

                            <dt>Installed</dt>
                            <dd>@FormatDate(server.InstalledAt)</dd>
                        </dl>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Propagation Info</h6>
                        <p class="small text-muted mb-2">
                            When you update the global configuration, agents with matching configurations 
                            will be automatically updated. Agents with custom configurations will not be affected.
                        </p>
                        <ul class="small mb-0">
                            <li>@matchingCount agent(s) match global config</li>
                            <li>@differentCount agent(s) have custom configs</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string ServerId { get; set; } = string.Empty;

    private McpServer? server;
    private string serverName = string.Empty;
    private Dictionary<string, string> serverConfiguration = new();
    private Dictionary<string, string> originalConfiguration = new();
    private List<ServerInstallation> installations = [];
    private List<Agent> agents = [];
    private bool configurationChanged = false;
    private string saveMessage = string.Empty;
    private bool saveSuccess = false;
    private int matchingCount = 0;
    private int differentCount = 0;

    // Agent management state
    private Dictionary<string, bool> selectedAgents = new();
    private Dictionary<string, bool> originalAgentSelection = new();
    private bool agentSelectionChanged = false;
    private string? agentMessage;
    private string agentMessageType = "info";
    private bool isProcessing = false;
    private bool allAgentsSelected = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        server = await ServerManager.GetServerByIdAsync(ServerId);
        serverName = server?.Name ?? "Unknown Server";

        if (server != null)
        {
            serverConfiguration = new Dictionary<string, string>(server.Configuration ?? new Dictionary<string, string>());
            originalConfiguration = new Dictionary<string, string>(serverConfiguration);

            installations = (await InstallationManager.GetInstallationsByServerIdAsync(ServerId)).ToList();

            var allAgents = await AgentManager.DetectInstalledAgentsAsync();
            agents = allAgents.ToList();

            // Count matching vs different configurations
            matchingCount = installations.Count(i => ConfigurationService.DoesAgentConfigMatchGlobal(server, i));
            differentCount = installations.Count - matchingCount;

            // Initialize agent selection state
            selectedAgents.Clear();
            foreach (var agent in agents)
            {
                // An agent is selected if it has an enabled installation
                var installation = installations.FirstOrDefault(i => i.AgentId == agent.Id);
                selectedAgents[agent.Id] = installation != null && installation.IsEnabled;
            }

            originalAgentSelection = new Dictionary<string, bool>(selectedAgents);
            agentSelectionChanged = false;
            agentMessage = null;
            UpdateAllAgentsSelectedState();
        }

        configurationChanged = false;
        saveMessage = string.Empty;
    }

    private void OnConfigurationChanged(Dictionary<string, string> newConfig)
    {
        serverConfiguration = newConfig;
        configurationChanged = !ConfigurationService.AreConfigurationsEqual(serverConfiguration, originalConfiguration);
        saveMessage = string.Empty;
    }

    private async Task SaveConfigurationAsync()
    {
        if (server == null) return;

        try
        {
            // Update the server configuration
            await ServerManager.UpdateServerConfigurationAsync(ServerId, serverConfiguration);

            // Propagate to matching installations
            var updatedInstallations = await ConfigurationService.PropagateConfigurationUpdateAsync(
                ServerId,
                originalConfiguration,
                serverConfiguration);

            var count = updatedInstallations.Count();
            
            saveSuccess = true;
            if (count > 0)
            {
                saveMessage = $"Configuration saved successfully! {count} agent installation(s) were also updated.";
            }
            else
            {
                saveMessage = "Configuration saved successfully! No agent installations were updated (none matched the previous global config).";
            }

            // Reload data to refresh the page
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            saveSuccess = false;
            saveMessage = $"Error saving configuration: {ex.Message}";
        }
    }

    private void CancelConfiguration()
    {
        serverConfiguration = new Dictionary<string, string>(originalConfiguration);
        configurationChanged = false;
        saveMessage = string.Empty;
    }

    private static string FormatDate(DateTime? date)
    {
        if (!date.HasValue) return "unknown";
        var days = (DateTime.UtcNow - date.Value).Days;
        return days switch
        {
            0 => "today",
            1 => "yesterday",
            < 7 => $"{days} days ago",
            < 30 => $"{days / 7} weeks ago",
            < 365 => $"{days / 30} months ago",
            _ => $"{days / 365} years ago"
        };
    }

    // Agent management methods
    private void UpdateAllAgentsSelectedState()
    {
        allAgentsSelected = agents.Any() && agents.All(a => selectedAgents.GetValueOrDefault(a.Id, false));
    }

    private void ToggleAgentSelection(string agentId, ChangeEventArgs e)
    {
        var isChecked = e.Value is bool b && b;
        selectedAgents[agentId] = isChecked;
        UpdateSelectionChanged();
        UpdateAllAgentsSelectedState();
    }

    private void ToggleAllAgents(ChangeEventArgs e)
    {
        var selectAll = e.Value is bool b && b;
        foreach (var agent in agents)
        {
            selectedAgents[agent.Id] = selectAll;
        }
        UpdateSelectionChanged();
        UpdateAllAgentsSelectedState();
    }

    private void SelectAllAgents()
    {
        foreach (var agent in agents)
        {
            selectedAgents[agent.Id] = true;
        }
        UpdateSelectionChanged();
        UpdateAllAgentsSelectedState();
    }

    private void DeselectAllAgents()
    {
        foreach (var agent in agents)
        {
            selectedAgents[agent.Id] = false;
        }
        UpdateSelectionChanged();
        UpdateAllAgentsSelectedState();
    }

    private void UpdateSelectionChanged()
    {
        agentSelectionChanged = !selectedAgents.SequenceEqual(originalAgentSelection);
        agentMessage = null;
    }

    private string GetAgentStatus(string agentId)
    {
        var installation = installations.FirstOrDefault(i => i.AgentId == agentId);
        if (installation == null) return "Not Added";
        return installation.IsEnabled ? "Enabled" : "Disabled";
    }

    private bool GetStatusChanged(string agentId)
    {
        var currentlySelected = selectedAgents.GetValueOrDefault(agentId, false);
        var originallySelected = originalAgentSelection.GetValueOrDefault(agentId, false);
        return currentlySelected != originallySelected;
    }

    private async Task ApplyAgentChangesAsync()
    {
        if (server == null) return;

        try
        {
            isProcessing = true;
            agentMessage = "Applying changes...";
            agentMessageType = "info";
            StateHasChanged();

            var added = 0;
            var removed = 0;
            var errors = new List<string>();

            foreach (var agent in agents)
            {
                var isSelected = selectedAgents.GetValueOrDefault(agent.Id, false);
                var wasSelected = originalAgentSelection.GetValueOrDefault(agent.Id, false);

                if (isSelected == wasSelected) continue; // No change

                try
                {
                    if (isSelected)
                    {
                        // Add or enable server for this agent
                        var installation = installations.FirstOrDefault(i => i.AgentId == agent.Id);
                        if (installation == null)
                        {
                            // Add server to agent
                            await InstallationManager.AddServerToAgentAsync(ServerId, agent.Id);
                            added++;
                        }
                        else if (!installation.IsEnabled)
                        {
                            // Enable existing server
                            await InstallationManager.ToggleServerEnabledAsync(ServerId, agent.Id);
                            added++;
                        }
                    }
                    else
                    {
                        // Remove server from agent
                        await InstallationManager.RemoveServerFromAgentAsync(ServerId, agent.Id);
                        removed++;
                    }
                }
                catch (Exception ex)
                {
                    errors.Add($"{agent.Name}: {ex.Message}");
                }
            }

            // Build success message
            var messageParts = new List<string>();
            if (added > 0) messageParts.Add($"{added} agent(s) added/enabled");
            if (removed > 0) messageParts.Add($"{removed} agent(s) removed");

            if (errors.Any())
            {
                agentMessage = $"Partial success: {string.Join(", ", messageParts)}. Errors: {string.Join("; ", errors)}";
                agentMessageType = "warning";
            }
            else if (messageParts.Any())
            {
                agentMessage = $"Success: {string.Join(", ", messageParts)}";
                agentMessageType = "success";
            }
            else
            {
                agentMessage = "No changes to apply";
                agentMessageType = "info";
            }

            // Reload data
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            agentMessage = $"Error applying changes: {ex.Message}";
            agentMessageType = "danger";
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private void CancelAgentChanges()
    {
        selectedAgents = new Dictionary<string, bool>(originalAgentSelection);
        agentSelectionChanged = false;
        agentMessage = null;
        UpdateAllAgentsSelectedState();
    }
}
